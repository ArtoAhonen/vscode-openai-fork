{
  "name": "vscode-openai",
  "displayName": "vscode-openai",
  "description": "A vscode extension can significantly enhance your productivity and efficiency when developing complex software applications using OpenAI latest models",
  "version": "1.0.1",
  "publisher": "AndrewButson",
  "icon": "images/logo_128x128.png",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arbs-io/vscode-openai-docs.git"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/arbs-io"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-openai-sidebar-view",
          "title": "vscode-openai",
          "icon": "./assets/openai-sidebar.svg"
        }
      ]
    },
    "views": {
      "vscode-openai-sidebar-view": [
        {
          "type": "webview",
          "id": "vscode-openai.sidebar.chatPersona",
          "name": "ChatPersona",
          "icon": "./assets/openai-sidebar.svg",
          "contextualTitle": "Chat Persona"
        },
        {
          "type": "webview",
          "id": "vscode-openai.sidebar.chathistory",
          "name": "ChatHistory",
          "icon": "./assets/openai-sidebar.svg",
          "contextualTitle": "Chat History"
        }
      ]
    },
    "configuration": {
      "title": "vscode-openai",
      "properties": {
        "vscode-openai.useCodeSnippetsOnMethodSuggest": {
          "type": "boolean",
          "default": false,
          "description": "Complete functions with their parameter signature."
        },
        "vscode-openai.baseurl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "format": "url",
          "description": "Specifies the base url for the openai service."
        },
        "vscode-openai.default-model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Specifies the default openai model."
        },
        "vscode-openai.authentication": {
          "type": "string",
          "default": "api-key",
          "enum": [
            "api-key",
            "oauth2"
          ],
          "enumDescriptions": [
            "Use OpenAI API keys for authentication. Visit your API Keys page to retrieve the API key you'll use in your requests.",
            "Use OAuth2 for authentication (Enterprise)."
          ]
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "submenu": "vscode-openai.menu.toolbox",
          "group": "navigation"
        }
      ],
      "vscode-openai.menu.toolbox": [
        {
          "command": "vscode-openai.register.defaultmodel",
          "group": "navigation.openai_3",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.register.apikey",
          "group": "navigation.openai_3"
        },
        {
          "command": "vscode-openai.completion.comment",
          "group": "navigation.openai_2",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.completion.explain",
          "group": "navigation.openai_2",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.completion.bounty",
          "group": "navigation.openai_2",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.completion.optimize",
          "group": "navigation.openai_2",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.completion.patterns",
          "group": "navigation.openai_2",
          "when": "vscode-openai.context.apikey"
        }
      ]
    },
    "submenus": [
      {
        "id": "vscode-openai.menu.toolbox",
        "label": "vscode-openai.menu.toolbox",
        "when": "editorTextFocus",
        "icon": {
          "light": "./assets/openai-light.png",
          "dark": "./assets/openai-dark.png"
        }
      }
    ],
    "commands": [
      {
        "command": "vscode-openai.register.defaultmodel",
        "title": "Default Model...",
        "category": "vscode-openai.register"
      },
      {
        "command": "vscode-openai.register.apikey",
        "title": "Register API Key...",
        "category": "vscode-openai.register",
        "icon": {
          "light": "./assets/openai-light.png",
          "dark": "./assets/openai-dark.png"
        }
      },
      {
        "command": "vscode-openai.completion.comment",
        "title": "Comments",
        "category": "vscode-openai.completion"
      },
      {
        "command": "vscode-openai.completion.explain",
        "title": "Explanation",
        "category": "vscode-openai.completion"
      },
      {
        "command": "vscode-openai.completion.bounty",
        "title": "Bug Bounty",
        "category": "vscode-openai.completion"
      },
      {
        "command": "vscode-openai.completion.optimize",
        "title": "Optimize",
        "category": "vscode-openai.completion"
      },
      {
        "command": "vscode-openai.completion.patterns",
        "title": "Design Patterns",
        "category": "vscode-openai.completion"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && npm run install:all:chatMessageViewer && npm run install:all:chatPersona && npm run install:all:chatHistory",
    "install:all:chatMessageViewer": "npm --prefix ./webview-ui/chatMessageViewer install",
    "install:all:chatPersona": "npm --prefix ./webview-ui/chatPersona install",
    "install:all:chatHistory": "npm --prefix ./webview-ui/chatHistory install",
    "build:webview": "npm --prefix ./webview-ui/chatMessageViewer run build && npm --prefix ./webview-ui/chatPersona run build && npm --prefix ./webview-ui/chatHistory run build",
    "build:webview:chatMessageViewer": "npm --prefix ./webview-ui/chatMessageViewer run build",
    "build:webview:chatPersona": "npm --prefix ./webview-ui/chatPersona run build",
    "build:webview:chatHistory": "npm --prefix ./webview-ui/chatHistory run build",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "npm run build:webview && tsc -watch -p ./",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/vsce": "^2.16.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.32.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
