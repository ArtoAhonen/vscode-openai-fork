{
  "name": "vscode-openai",
  "displayName": "vscode-openai",
  "description": "A vscode extension providing quick access menu for editor",
  "version": "0.0.1",
  "publisher": "AndrewButson",
  "icon": "images/logo_128x128.png",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arbs-io/vscode-openai.git"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/arbs-io"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "vscode-openai",
      "properties": {
        "vscode-openai.useCodeSnippetsOnMethodSuggest": {
          "type": "boolean",
          "default": false,
          "description": "Complete functions with their parameter signature."
        },
        "vscode-openai.baseurl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "format": "url",
          "description": "Specifies the base url for the openai service."
        },
        "vscode-openai.default-model": {
          "type": "string",
          "default": "code-davinci-002",
          "description": "Specifies the default openai model."
        },
        "vscode-openai.authentication": {
          "type": "string",
          "default": "api-key",
          "enum": [
            "api-key",
            "oauth2"
          ],
          "enumDescriptions": [
            "Use OpenAI API keys for authentication. Visit your API Keys page to retrieve the API key you'll use in your requests.",
            "Use OAuth2 for authentication (Enterprise)."
          ]
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "submenu": "vscode-openai.menu.toolbox",
          "group": "navigation"
        }
      ],
      "vscode-openai.menu.toolbox": [
        {
          "command": "vscode-openai.register.defaultmodel",
          "group": "navigation.openai_3",
          "when": "vscode-openai.context.apikey"
        },
        {
          "command": "vscode-openai.register.apikey",
          "group": "navigation.openai_3"
        },
        {
          "command": "vscode-openai.completion.comment",
          "group": "navigation.openai_1",
          "when": "vscode-openai.context.apikey"
        }
      ]
    },
    "submenus": [
      {
        "id": "vscode-openai.menu.toolbox",
        "label": "vscode-openai.menu.toolbox",
        "when": "editorTextFocus",
        "icon": {
          "light": "./assets/openai-light.png",
          "dark": "./assets/openai-dark.png"
        }
      }
    ],
    "commands": [
      {
        "command": "vscode-openai.register.defaultmodel",
        "title": "Default Model...",
        "category": "vscode-openai.register"
      },
      {
        "command": "vscode-openai.register.apikey",
        "title": "Register API Key...",
        "category": "vscode-openai.register",
        "icon": {
          "light": "./assets/openai-light.png",
          "dark": "./assets/openai-dark.png"
        }
      },
      {
        "command": "vscode-openai.completion.comment",
        "title": "Add Comments",
        "category": "vscode-openai.completion"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/vsce": "^2.16.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.32.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "openai": "^3.1.0"
  }
}
