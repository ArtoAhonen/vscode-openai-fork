{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test"]
}
